{
  "name": "kirby-starthilfe",
  "version": "0.1.0",
  "description": "An opinionated Kirby 4 website boilerplate",
  "type": "module",
  "scripts": {
    "cache:clear": "rm -rf storage/cache",
    "twsort": "rustywind --write site",
    "dev": "npm run cache:clear && rm -rf public/dist && vite",
    "build": "npm run cache:clear && rm -rf public/dist && vite build"
  },
  "keywords": [
    "Kirby",
    "Kirby 4",
    "Vite",
    "Typescript"
  ],
  "author": "Lasse Weinbrandt",
  "private": true,
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.3",
    "laravel-vite-plugin": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3",
    "vite": "^5.4.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
