{
  "name": "kirby-starthilfe",
  "version": "0.1.0",
  "description": "An opinionated Kirby 4 website boilerplate",
  "type": "module",
  "scripts": {
    "cache:clear": "rm -rf storage/cache",
    "twsort": "rustywind --write site",
    "dev": "npm run cache:clear && rm -rf public/dist && vite",
    "build": "npm run cache:clear && rm -rf public/dist && vite build"
  },
  "keywords": [
    "Kirby",
    "Kirby 4",
    "Vite",
    "Typescript"
  ],
  "author": "Lasse Weinbrandt",
  "private": true,
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.9",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.17.22",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.8.2",
    "vite": "^5.4.14",
    "vite-plugin-kirby": "^5.4.0"
  }
}
